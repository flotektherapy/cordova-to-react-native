<?xml version='1.0' encoding='utf-8'?>
<widget id="com.objectpartners.superfit" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SuperfitTracker</name>
    <description>
        An application for demonstration purposes that tracks activities via the device's GPS and allows you to view them.
    </description>
    <author email="steve.connelly@objectpartners.com" href="https://objectpartners.com">
        Object Partners
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.1.1" />
    <engine name="android" spec="~5.1.1" />
    <plugin name="cordova-sqlite-storage" spec="~1.4.6-pre6a" />
</widget>
